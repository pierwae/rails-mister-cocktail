<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.picture %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <%= link_to 'back', cocktails_path, class: "btn btn-flat mt-3" %>
  </div>
</div>

<div class='container p-5'>

