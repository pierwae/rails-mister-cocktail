<%= link_to 'back', cocktails_path %>

<h3><%= @cocktail.name %></h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
