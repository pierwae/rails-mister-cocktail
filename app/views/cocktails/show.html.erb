    <%= @cocktail.name %>
  </div> -->

  <% @cocktail.doses.each do |dose| %>
    <div class="notification m-3">
      <div class="notification-content">
        <p><small><%= dose.ingredient.name %></small></p>
        <p><%= dose.description %></p>
      </div>

      <div class="notification-actions">
        <%= link_to sanitize('<i class="fas fa-times"></i>'), dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
        <!-- <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
        <a href="#">Delete <i class="far fa-trash-alt"></i></a> -->
      </div>
    </div>
  <% end %>

  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-flat m-3" %>
</div>
